{

  "manifest_version": 2,
  "name": "Cookie importer",
  "version": "1.0",

  "description": "Add-on/extension for Chrome, Opera and Firefox built using the WebExtensions APIs.",
  "homepage_url": "https://github.com/fffawn/cookie-importer",
  
  "icons": {
    "96": "icon.png"
  },

  "permissions": [
  	"cookies",
  	"tabs",
  	"<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Cookie importer",
    "default_popup": "popup/main.html"
  }
}